<div class="container mt-5 mb-5">
  <div class="row">
    <div class="col-md">
      <div class="panel panel-info">
        <div class="panel-heading">
          <div class="panel-title">
            <div class="row">
              <div class="col-md-6">
                <h5><span class="fa fa-shopping-cart"></span> Shopping Cart</h5>
              </div>
              <div class="col-md-6">
                <%# <button type="button" class="btn btn-primary">
                  <span class="fa fa-share-alt"></span> Continue shopping
                </button> %>
              </div>
            </div>
          </div>
        </div>
        <%= render "carts/cart_item" %>
        <div class="panel-footer">
          <div class="row text-center">
            <div class="col-md-9">
              <h4 class="text-right">Total $<%= current_order.subtotal %></h4>
            </div>
            <div class="col-md-3">
              <% if user_signed_in? %>
                <% if @order_items.size>0 %>
                  <%= link_to 'Checkout', new_order_path, class: "btn btn-success btn-block" %>
                <% end %>
              <% else %>
                <h5>Sign in to Checkout</h5>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
