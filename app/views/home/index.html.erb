<section class="section-name padding-y-sm">
  <div class="container">
    <header class="section-heading">
      <a href="#" class="btn btn-outline-primary float-right">See all</a>
      <h3 class="section-title">Popular products</h3>
    </header>
    <!-- sect-heading -->
    <div class="row">
      <% @products.each do |product| %>
        <div class="col-md-3">
          <div href="#" class="card card-product-grid">
            <a href="#" class="img-wrap"> <img src="images/items/1.jpg"> </a>
            <figcaption class="info-wrap">
              <%= link_to product.name, products_path %>
              <%= form_for(@order_item, remote: true) do |f| %>
                <%= f.hidden_field :product_id, value: product.id %>
                <div class="price mt-1">$<%= product.price %></div>
                <div class="form-group">
                  <%= f.text_field :quantity, value: 1, min: 1, class: 'form-control' %>
                </div>
                <%= f.submit "Add to cart", class: 'btn btn-primary btn-sm' %>
              <% end %>
            </figcaption>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</section>
