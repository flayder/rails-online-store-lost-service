<!DOCTYPE html>
<html>
  <head>
    <title>Mystore</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" %>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <% if flash[:notice] %>
      <%= notice %>
    <% end %> <% if flash[:alert] %>
      <%= alert %>
    <% end %>
    <header class="section-header">
      <section class="header-main border-bottom pb-3 pt-3">
        <div class="container">
          <div class="row align-items-center">
            <div class="col-lg-2 col-4">
              <%= link_to "MyStore", root_path %>
            </div>
            <div class="col-lg-6 col-sm-12">
              <%= form_tag products_path, :method => "get" do %>
                <div class="input-group w-100">
                  <%= text_field_tag :search, params[:search], class: "form-control", placeholder: "Search for products" %>
                  <div class="input-group-append">
                    <%= button_tag( :class => "btn btn-outline-secondary") do %>
                      <i class="fa fa-search"></i>
                    <% end %>
                  </div>
                </div>
              <% end %>
            </div>
            <div class="col-lg-4 col-sm-6 col-12">
              <div class="widgets-wrap float-md-right">
                <div class="widget-header  mr-3">
                  <a href="#" class="btn btn-outline-secondary">Checkout</a>
                  <%= render 'layouts/cart' %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>
    </header>
    <%= yield %>
    <footer class="footer bg-light pb-5 pt-5">
      <div class="container">
        <div class="row">
          <div class="col-lg-6 h-100 text-center text-lg-left my-auto">
            <ul class="list-inline mb-2">
              <li class="list-inline-item">
                <a href="#">About</a>
              </li>
              <li class="list-inline-item">&sdot;</li>
              <li class="list-inline-item">
                <a href="#">Contact</a>
              </li>
              <li class="list-inline-item">&sdot;</li>
              <li class="list-inline-item">
                <a href="#">Terms of Use</a>
              </li>
              <li class="list-inline-item">&sdot;</li>
              <li class="list-inline-item">
                <a href="#">Privacy Policy</a>
              </li>
            </ul>
            <p class="text-muted small mb-4 mb-lg-0">&copy; MyStore 2020. All Rights Reserved.</p>
          </div>
          <div class="col-lg-6 h-100 text-center text-lg-right my-auto">
            <ul class="list-inline mb-0">
              <li class="list-inline-item mr-3">
                <a href="#">
                  <i class="fa fa-facebook fa-2x fa-fw"></i>
                </a>
              </li>
              <li class="list-inline-item mr-3">
                <a href="#">
                  <i class="fa fa-twitter-square fa-2x fa-fw"></i>
                </a>
              </li>
              <li class="list-inline-item">
                <a href="#">
                  <i class="fa fa-instagram fa-2x fa-fw"></i>
                </a>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>
